<?xml version="1.0" encoding="ISO-8859-1"?>
<!--
    Relación de consultas para las tablas de MANTIC
-->
<process>
  <model>   
  </model>

  <dml>	
    <unit id="TcManticPersonasDto">
      <select id="row">
        select
        *
        from
        tc_mantic_personas
        where
        {condicion}
      </select>			
      <select id="curp">
        select
        *
        from
        tc_mantic_personas
        where
        curp='{curp}'
      </select>
      <select id="findUsuario">
        select
          *
        from
        tc_mantic_personas
        where
        cuenta = '{cuenta}'
      </select>
      <select id="nombre">
        select
        *
        from
        tc_mantic_personas
        where
        lower(nombres)= lower('{nombres}')
        and lower(paterno)= lower('{paterno}')
        and lower(materno)= lower('{materno}')
      </select>
    </unit>
  </dml>    
</process>
